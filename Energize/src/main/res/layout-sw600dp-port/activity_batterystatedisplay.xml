<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:baselineAligned="false"
              android:orientation="vertical">

    <fragment
            android:name="com.halcyonwaves.apps.energize.fragments.OverviewFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment_maininformation"/>

    <fragment
            android:name="com.halcyonwaves.apps.energize.fragments.BatteryCapacityGraphFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment_batterycapacitygraph"/>

    <fragment
            android:name="com.halcyonwaves.apps.energize.fragments.TemperatureGraphFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment_temperaturegraph"/>

</LinearLayout>
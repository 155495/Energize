<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
    <com.viewpagerindicator.TitlePageIndicator android:id="@+id/vpi_fragment_titles" android:layout_height="wrap_content" android:layout_width="fill_parent" />
    <ScrollView android:id="@+id/scrollview_battery_facts" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"  android:layout_marginRight="5dp" android:layout_marginLeft="5dp">
        <LinearLayout android:id="@+id/linearlayout_battery_facts" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <LinearLayout android:id="@+id/layout_graph_view" android:layout_width="fill_parent" android:layout_height="200dp" android:layout_marginRight="5dp" android:layout_marginLeft="5dp" />
            <TextView android:id="@+id/textview_label_current_chargingstate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/textview_label_current_chargingstate" />
            <TextView android:id="@+id/textview_text_current_chargingstate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" />
        	<TextView android:id="@+id/textview_label_current_charginglvl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/textview_label_current_charginglvl" />
        	<TextView android:id="@+id/textview_text_current_charginglvl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
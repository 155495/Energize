<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="15dp" >
    <TextView android:id="@+id/tv_about_application_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/app_name" android:textStyle="bold" android:textSize="40dp" android:gravity="center_horizontal" android:paddingRight="35dp" android:paddingTop="100dp"/>
    <TextView android:id="@+id/tv_about_application_version" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="20dp" android:text="@string/textview_app_version" android:textStyle="italic" android:gravity="center_horizontal" android:paddingLeft="120dp" />
    
    <TextView android:id="@+id/tv_do_you_like_the_app" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/textview_do_you_like_it" android:gravity="center_horizontal" android:textStyle="bold" android:textSize="20dp" android:paddingTop="80dp"/>
    <TextView android:id="@+id/tv_why_rating_the_app" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/textview_why_rating_the_app" android:textStyle="normal" android:textSize="15dp" android:paddingLeft="20dp" android:paddingRight="20dp" android:paddingTop="20dp" android:paddingBottom="10dp" android:gravity="center_horizontal" />
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal">
    	<Button android:id="@+id/btn_rate_app" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/button_rate_app" />
    </LinearLayout>
</LinearLayout>
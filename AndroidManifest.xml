<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.halcyonwaves.apps.energize" android:versionCode="10" android:versionName="0.1" android:installLocation="internalOnly">
    
    <!-- define which OS and screen requirement this application has -->
	<uses-sdk android:minSdkVersion="15" android:targetSdkVersion="15" android:maxSdkVersion="15" />
	<supports-screens android:smallScreens="true" android:normalScreens="true" android:largeScreens="true" android:xlargeScreens="true" />
	
	<!-- list all permissions we need to run this application -->
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

	<!-- define the content of this application -->
    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:hardwareAccelerated="true">
        
        <!-- define the  services we have implemented -->
        <service android:name="com.halcyonwaves.apps.energize.services.MonitorBatteryStateService" android:exported="false" />

        <!-- register a receiver which gets called after the device booted up -->
		<receiver android:name="com.halcyonwaves.apps.energize.receivers.BootCompletedReceiver" android:exported="false">
			<intent-filter >
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>            
		</receiver>
        
        <!-- define the main activity which will be displayed if the user selects the launcher item -->
        <activity android:name="com.halcyonwaves.apps.energize.BatteryStateDisplayActivity" android:label="@string/app_name">
            <intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- define the preference activity we want to show -->
        <activity android:name="com.halcyonwaves.apps.energize.SettingsActivity" />
		
    </application>

</manifest>

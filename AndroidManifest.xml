<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.halcyonwaves.apps.energize" android:versionCode="10" android:versionName="0.1">
    
    <!-- define which OS and screen requirement this application has -->
	<uses-sdk android:minSdkVersion="15" android:targetSdkVersion="15" android:maxSdkVersion="15" />
	<supports-screens android:smallScreens="true" android:normalScreens="true" android:largeScreens="true" android:xlargeScreens="true" />

	<!-- define the content of this application -->
    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:hardwareAccelerated="true">

        <!-- define the main activity which will be displayed if the user selects the launcher item -->
        <activity android:name="com.halcyonwaves.apps.energize.BatteryStateDisplayActivity" android:label="@string/app_name">
            <intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- define the preference activity we want to show -->
        <activity android:name="com.halcyonwaves.apps.energize.SettingsActivity" />
        
        <!-- tell Android that we want to be informed about power connection changes -->
		<receiver android:name="com.halcyonwaves.apps.energize.receivers.PowerConnectionReceiver">
			<intent-filter>
				<action android:name="android.intent.action.ACTION_POWER_CONNECTED"/>
				<action android:name="android.intent.action.ACTION_POWER_DISCONNECTED"/>
			</intent-filter>
		</receiver>
        
        <!-- tell Android that we want to be informed about battery level changes -->
		<receiver android:name="com.halcyonwaves.apps.energize.receivers.BatteryLevelReceiver">
			<intent-filter>
				<action android:name="android.intent.action.ACTION_BATTERY_CHANGED" />
			</intent-filter>
		</receiver>
		
    </application>

</manifest>
